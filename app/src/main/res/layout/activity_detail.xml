<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <FrameLayout
        android:id="@+id/container_previous"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/container_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title article"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="412dp"
        android:layout_height="432dp">

        <TextView
            android:id="@+id/text_view_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:paddingBottom="32dp"
            android:text="Class aptent taciti sociosqu ad litora torquent per conubia nostra, per inceptos hymenaeos. Ut non enim eleifend felis pretium feugiat. Aenean massa. Curabitur ullamcorper ultricies nisi. Donec posuere vulputate arcu. Etiam feugiat lorem non metus. Sed magna purus, fermentum eu, tincidunt eu, varius ut, felis. Suspendisse eu ligula. Praesent adipiscing. Nullam nulla eros, ultricies sit amet, nonummy id, imperdiet feugiat, pede."
            android:textColor="@color/black"
            android:textSize="20sp" />
    </ScrollView>
    <Button
        android:id="@+id/button_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE"
        app:layout_constraintEnd_toStartOf="@+id/container_next"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toEndOf="@+id/container_previous"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.264" />


</LinearLayout>